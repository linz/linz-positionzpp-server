#!/bin/sh
# postinst script for linz-bernese52
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

datadir=/var/lib/positionzpp
logdir=/var/log/positionzpp

case "$1" in
    configure)
        # Create the positionzpp_server user
        if ! id -un positionzpp_server > /dev/null 2>&1; then
            adduser -q --system positionzpp_server
        fi
        adduser positionzpp_server bern_users 
        echo 'positionzpp_server' > /etc/positionzpp/user
        
        mkdir -p $datadir/interface/input
        mkdir -p $datadir/interface/output
        mkdir -p $datadir/interface/refdata
        for d in archive berndata bernuser data interface locks logs statistics status work; do
            mkdir -p $datadir/$d
            chown -R :bern_users $datadir/$d
            chmod -R g+u $datadir/$d
            chmod -R g+s $datadir/$d
        done
        mkdir -p $logdir

        chown -R :bern_users $logdir
        chmod -R g+u $logdir
        chmod -R g+s $logdir

        echo '***********************************************************'
        echo '* To start the positionzpp server use                     *'
        echo '*                                                         *'
        echo '* sudo -u positionzpp_server positionzpp start            *'
        echo '***********************************************************'

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
